@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Grupo
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Grupo";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>

<div class="entity-editor" ng-controller="GrupoController as grupo">
    <div ng-show="grupo.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>
            {{grupo.response.value}}</p>
    </div>
    <form class="form-horizontal" ng-init="grupo.detailInit(tab)" data-toggle="validator" >
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Código</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{grupo.item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Nombre</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{grupo.item.Nombre}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Estado</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{grupo.item.Estado.Nombre}}</p>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="grupo.index(tab)" class="btn btn-sm btn-link" data-ajax>Cancelar</a>
            <a  ng-click="grupo.users(tab, grupo.item.Id)" class="btn btn-sm btn-default" data-ajax>
                <span class="glyphicon glyphicon-user"></span>
                <text class="hidden-xs">Usuarios</text>
            </a>
            <a ng-click="grupo.edit(tab,grupo.item.Id)" class="btn btn-sm btn-primary">
                Modificar
                </a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
