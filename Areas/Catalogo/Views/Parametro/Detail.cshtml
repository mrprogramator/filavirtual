@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Parámetro";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>

<div class="entity-editor" ng-controller="TipoAtencionController as tipoAtencion">
    <div ng-show="tipoAtencion.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>
            {{tipoAtencion.response.value}}</p>
    </div>
    <form class="form-horizontal" ng-init="tipoAtencion.loadItem(tab)">
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Id</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="tipoAtencion.item.Id">
                    {{tipoAtencion.item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Nombre</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="tipoAtencion.item.Nombre">
                    {{tipoAtencion.item.Nombre}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="tipoAtencion.item.Valor">
            <label class="col-sm-2 control-label">
                Valor</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="tipoAtencion.item.Nombre">
                    {{tipoAtencion.item.Valor}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="tipoAtencion.item.EstadoNombre">
            <label class="col-sm-2 control-label">
                Estado</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="tipoAtencion.item.Nombre">
                    {{tipoAtencion.item.EstadoNombre}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="tipoAtencion.item.GrupoNombre">
            <label class="col-sm-2 control-label">
                Grupo</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{tipoAtencion.item.GrupoNombre}}</p>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="tipoAtencion.index(tab)" class="btn btn-sm btn-link" data-ajax>Cancelar</a>
            <a ng-click="tipoAtencion.edit(tab,tipoAtencion.item.Id)" class="btn btn-sm btn-primary">
                Modificar
            </a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
