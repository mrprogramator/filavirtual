@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Nuevo Programa";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>
<div class="entity-editor" ng-controller="ProgramaController as programa">
    <div ng-show="programa.response.result == false" class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      
      <h4 class="title">Error</h4>
      <p>{{programa.response.value}}</p>
    </div>
    <form id="identicalForm" method="POST" data-toggle="validator" ng-submit="programa.save(tab,item)">
        <div class="form-group ">
            <label class="label-control">Código</label>
            <input class="form-control" ng-model="item.Id" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group ">
            <label class="control-label" for="Email">
                Nombre</label>
            <input class="form-control" ng-model="item.Nombre" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <label class="label-control">
                Tipo</label>
            <select class="form-control" ng-model="item.TipoId" required>
                <option ng-selected="{{tipo.Id == item.TipoId }}"
                        ng-repeat="tipo in programa.tipos"
                        value="{{tipo.Id}}">
                  {{tipo.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group">
            <label class="label-control">
                Padre</label>
            <select class="form-control" ng-model="item.PadreId">
                <option ng-selected="{{padre.Id == item.PadreId }}"
                        ng-repeat="padre in programa.padres"
                        value="{{padre.Id}}">
                  {{padre.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group">
            <label class="label-control">
                Estado</label>
            <select class="form-control" ng-model="item.EstadoId" required>
                <option ng-selected="{{estado.Id == item.EstadoId }}"
                        ng-repeat="estado in programa.estados"
                        value="{{estado.Id}}">
                  {{estado.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group ">
            <label class="control-label">
                Orden</label>
            <input class="form-control" ng-model="item.Orden" type="number" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group ">
            <label class="control-label">
                Url</label>
            <input class="form-control" ng-model="item.Url" />
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="checkbox-list">
                Accesos</label>
            <div id="checkbox-list" class="container">
                <div class="checkbox">
                    <input type="checkbox" name="CheckSel" ng-model="item.CheckSel">Seleccionar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckIns" ng-model="item.CheckIns">Insertar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckMod" ng-model="item.CheckMod">Modificar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckEli" ng-model="item.CheckEli">Eliminar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckImp" ng-model="item.CheckImp">Imprimir<br>
                </div>
            </div>
        </div>
        <div class="text-right">
            <a href="#" ng-click="programa.index(tab)" class="btn btn-link">
                Cancelar</a>
            <button type="submit" class="btn btn-primary">
                Guardar</button>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>