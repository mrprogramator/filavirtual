<div ng-controller="MonitoreoMesasController as monitoreo">
    <div class="row">
        <h2 class="page-header">Monitoreo de Mesas</h2>
        <form method="post" ng-submit="monitoreo.monitorear(tab)">
        
            <div class="form-group col-md-3">
                <div class="col-sm-2">
                    <h6><strong>Punto</strong></h6>
                </div>
                <div class="col-sm-10">
                <select name="PuntoId" class="input-sm form-control" ng-model="monitoreo.puntoId" required>
                    <option ng-repeat="punto in monitoreo.puntos"
                            value="{{punto.Id}}">
                        {{punto.Descripcion}}
                    </option>
                </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-sm btn-primary">Iniciar Monitoreo</button>
            </div>
        </form>
    </div>
    <div class="row" id="monitoreo-div" ng-include="monitoreo.redirect">

    </div>
</div>
