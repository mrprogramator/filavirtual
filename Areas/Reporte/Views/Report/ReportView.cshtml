@model ReportSource
@{
    ViewBag.Title = "ReportDemo" + new Random().Next().ToString();
    var AbsoluteURL = Request.Url.Scheme + "://" + Request.Url.Authority +
    Request.ApplicationPath.TrimEnd('/') + "/";
}
@(Html.TelerikReporting().ReportViewer()
       .Id("R" + new Random().Next().ToString())
       .ServiceUrl(AbsoluteURL + "api/reports/")
       .TemplateUrl(AbsoluteURL + "ReportViewer/templates/telerikReportViewerTemplate.html")
       .ReportSource(this.Model)
       .ViewMode(ViewModes.PRINT_PREVIEW)
       .DirectPrint(true)
       .ScaleMode(ScaleModes.SPECIFIC)
       .Scale(1.0)
       .PersistSession(false)
)