<!DOCTYPE html>
<html style="width:100%;height:100%" ng-app="TelevisorApp">
<head>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>Televisor</title>
        <link href="~/Resources/bootstrap-3.3.5-dist/css/bootstrap.css" rel="stylesheet"
        type="text/css" />

        <link href="~/Resources/css/tabs.css" rel="stylesheet" type="text/css"/>
        <link href="~/Resources/css/simple-sidebar.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/js/ng-bootstrap.treeview/dist/abn_tree.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/treeview.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/special-glyphicons.css" rel="stylesheet" type="text/css" />

        <script src="~/Resources/js/jquery-2.1.4.js" type="text/javascript"></script>
        <script src="~/Resources/bootstrap-3.3.5-dist/js/bootstrap.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-animate.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-ui/ui-bootstrap-tpls.js" type="text/javascript"></script>
        <script src="~/Resources/operador/js/jquery.signalR-2.2.0.js"></script>
        <script src="~/signalr/hubs" type="text/javascript"></script>
    </head>
</head>
<body ng-controller="TelevisorController">
        <style>
        .marquee-div
        {
            background-color:Yellow;
            color:Black;
            position:absolute;
            bottom:0;
            width:100%;
            z-index=9999999999999; 
            height:35px
        }
        .overlay
        {
            opacity:1;
            position:fixed;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index:-1;
        }
        .called
        {
            background-color:Yellow;
        }
        body
        {
            overflow:hidden;
        }
        .video-container 
        {
            position:absolute;
            height:100%;
            width:100%;
            overflow: hidden;
            z-index:-999999999999999999999;
        }

        .video-container video 
        {
            min-width: 100%;
            min-height: 100%;
        }
        </style>
            <div class="video-container embed-responsive embed-responsive-16by9" >
                <video poster="~/Resources/img/default.jpg" class="embed-responsive-item" id="player" ng-src="{{video}}" autoplay=true loop=true muted=true >
                </video>
		    </div>
		<div class="marquee-div">
            <marquee direction="left">
                 <h1 style="margin-top:0" >
                    <span ng-if="punto.Mensaje1">{{punto.Mensaje1}}</span>
                    <span ng-if="punto.Mensaje2">- {{punto.Mensaje2}} </span>
                </h1>
            </marquee>
        </div>
    <div style="height:100%">
					<img class="hidden-xs" style="max-width:300px;position:absolute; top:5px;right:10px" src="~/Resources/img/logo_cotas.png">
            
			<div ng-style="resizeWithOffset()" 
       resize 
        notifier="notifyServiceOnChage(params)" class="pull-left text-center">
					<div ng-if="asignados.length > 0" class="panel panel-primary" style="margin-top:10px;max-height:500px;width:100%">
						<div class="panel-heading text-center"  style="max-height:50px"><h2 class="text-center" style="margin-top:-5px">Tickets</h2></div>
						<table class="table" style="width:100%">
						  <ul class="list-group">
                              <li style="font-size:2.8em" ng-if="loading"><h3>Obteniendo datos</h3></li>
					  		  <li style="font-size:2.8em" class="list-group-item" id="{{item.NroTicket + item.AgenteId}}" ng-repeat="item in asignados"><h3 style="font-size:1.7em">{{item.NroTicket}}<span class="glyphicon glyphicon-arrow-right" style="margin-right:10px;margin-left:10px"></span>{{item.AgenteId}}</h3></li>
						  </ul>
					  	</table>
					</div>
			</div>
		
        
    </div>
        <script src="~/Resources/js/angular-modules/televisor-vertical.js" type="text/javascript"></script>
</body>
</html>
