@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Grupo
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";
}

<div class=" panel panel-danger" ng-controller="GrupoController as grupo">
    <div ng-show="grupo.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{grupo.response.value}}</p>
    </div>
    <div class="panel-heading panel-head">
           <b>Advertencia</b>
    </div>
    <div class="panel-body">
        <h4>¿Est&aacute; seguro que quiere <b>eliminar</b> el siguiente <b>@Model.GetType().Name.ToLower()</b>?</h4>
            <form class="form-horizontal" ng-init="grupo.detailInit(tab)" method="post" ng-submit="grupo.remove(tab, grupo.item.Id)">
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Código</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" ng-model="grupo.item.Id">{{grupo.item.Id}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Nombre</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" ng-model="grupo.item.Nombre">{{grupo.item.Nombre}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Estado</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" ng-model="grupo.item.Estado.Valor">{{grupo.item.Estado.Nombre}}</p>
                    </div>
                </div>
                <div class="text-right">
                    <a class="btn btn-sm btn-default" ng-click="grupo.index(tab)">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
