@model SistemaDeGestionDeFilas.Areas.FilaVirtual.Models.Ticketera
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Editar Ticketera";
}
<div ng-controller="TicketeraController as ticketera">
    <h2 class="page-header">
        @ViewBag.Title
    </h2>
    <div ng-show="ticketera.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{ticketera.response.value}}</p>
    </div>
    <div class="entity-editor">
        <form method="POST" ng-init="ticketera.detailInit(tab)" data-toggle="validator" ng-submit="ticketera.update(tab, ticketera.ticketera.item)" data-ajax >
            <div class="form-group ">
                <label class="label-control">
                    Descripcion</label>
                <input class="form-control" ng-model="ticketera.item.Descripcion" required />
                <div class="help-block with-errors">
                </div>
            </div>
            <div class="text-right">
                <a ng-click="ticketera.volver(tab)" class="btn btn-link" data-ajax>Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    Guardar</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>