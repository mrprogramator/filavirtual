xx<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div id="navbar-container" class="container">
        <div class="navbar-header" id="navbar-header">
            @if (Context.User.Identity.IsAuthenticated)
            {
                <button type="button" id="navbar-toggle" class="btn btn-toggle  btn-lg hidden-md hidden-lg hidden-sm pull-right"
                    data-toggle="collapse" data-target="#main-navbar">
