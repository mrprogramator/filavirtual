@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Nuevo Grupo";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>
<div class="entity-editor" ng-controller="GrupoController as grupo">
    <div ng-show="grupo.response.result == false" class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      
      <h4 class="title">Error</h4>
      <p>{{grupo.response.value}}</p>
    </div>
    <form id="identicalForm" method="POST" data-toggle="validator" ng-submit="grupo.save(tab,item)">
        <div class="form-group ">
            <label class="label-control">Código</label>
            <input class="form-control" ng-model="item.Id" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group ">
            <label class="control-label" for="Email">
                Nombre</label>
            <input class="form-control" ng-model="item.Nombre" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <label class="label-control">
                Estado</label>
            <select class="form-control" ng-model="item.EstadoId" required>
                <option ng-selected="{{estado.Id == item.EstadoId }}"
                        ng-repeat="estado in grupo.estados"
                        value="{{estado.Id}}">
                  {{estado.Nombre}}
                </option>
            </select>
        </div>
        <div class="text-right">
            <a href="#" ng-click="grupo.index(tab)" class="btn btn-link">
                Cancelar</a>
            <button type="submit" class="btn btn-primary">
                Guardar</button>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>