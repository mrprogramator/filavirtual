@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";
}

<div class=" panel panel-danger" ng-controller="TipoAtencionController as tipoAtencion">
    <div ng-show="tipoAtencion.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{tipoAtencion.response.value}}</p>
    </div>
    <div class="panel-heading panel-head">
        <b>Advertencia</b>
    </div>
    <div class="panel-body">
        <h4>¿Est&aacute; seguro que quiere <b>eliminar</b> el siguiente <b>parámetro</b>?</h4>
            <form class="form-horizontal" ng-init="tipoAtencion.loadItem(tab)" method="post" ng-submit="tipoAtencion.remove(tab, item.Id)">
                <div class="form-group">
            <label class="col-sm-2 control-label">
                Id</label>
                <div class="col-sm-10">
                    <p class="form-control-static" ng-model="item.Id">
                        {{item.Id}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Nombre</label>
                <div class="col-sm-10">
                    <p class="form-control-static" ng-model="item.Nombre">
                        {{item.Nombre}}</p>
                </div>
            </div>
            <div class="form-group" ng-if="item.Valor">
                <label class="col-sm-2 control-label">
                    Valor</label>
                <div class="col-sm-10">
                    <p class="form-control-static" ng-model="item.Nombre">
                        {{item.Valor}}</p>
                </div>
            </div>
            <div class="form-group" ng-if="item.Grupo != undefined">
                <label class="col-sm-2 control-label">
                    Grupo</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{item.Grupo.Nombre}}</p>
                </div>
            </div>
                <div class="text-right">
                    <a class="btn btn-sm btn-default" ng-click="tipoAtencion.index(tab)">Cancelar</a>
                    <button type="submit" class="btn btm-sm btn-danger">
                        Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
