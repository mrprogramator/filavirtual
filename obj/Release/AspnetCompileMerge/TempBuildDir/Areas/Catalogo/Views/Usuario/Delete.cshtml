@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Usuario
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";
}

<div class=" panel panel-danger" ng-controller="UsuarioController as usuario">
    <div ng-show="usuario.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{usuario.response.value}}</p>
    </div>
    <div class="panel-heading panel-head">
        <b>Advertencia</b>
    </div>
    <div class="panel-body">
        <h4>¿Est&aacute; seguro que quiere <b>eliminar</b> el siguiente <b>@Model.GetType().Name.ToLower()</b>?</h4>
            <form class="form-horizontal" ng-init="usuario.detailInit(tab)" method="post" ng-submit="usuario.remove(tab, usuario.item.Id)">
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Id</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" ng-model="usuario.item.Id">{{usuario.item.Id}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Email</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" ng-model="usuario.item.Email">{{usuario.item.Email}}</p>
                    </div>
                </div>
                <div class="text-right">
                    <a class="btn btn-default" ng-click="usuario.index(tab)">Cancelar</a>
                    <button type="submit" class="btn btn-danger">
                        Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
