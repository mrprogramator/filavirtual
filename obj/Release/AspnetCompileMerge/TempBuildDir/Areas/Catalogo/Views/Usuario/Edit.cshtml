@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Usuario
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Editar Usuario";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>

<div class="entity-editor" ng-controller="UsuarioController as usuario">
    <div ng-show="usuario.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{usuario.response.value}}</p>
    </div>
    <form method="POST" ng-init="usuario.detailInit(tab)" data-toggle="validator" ng-submit="usuario.update(tab, usuario.item)" data-ajax >
        <div class="form-group ">
            <label class="control-label" for="Email">
                Email</label>
            <input class="form-control " id="Email" name="Email" type="email" ng-model="usuario.item.Email"
                required />
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="text-right">
            <a ng-click="usuario.index(tab)" class="btn btn-link" data-ajax>Cancelar</a>
            <button type="submit" class="btn btn-primary">
                Guardar</button>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>