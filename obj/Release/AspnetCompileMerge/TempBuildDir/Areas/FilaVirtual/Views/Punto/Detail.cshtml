@model SistemaDeGestionDeFilas.Areas.FilaVirtual.Models.Punto
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Punto";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>
<div ng-show="routing.response.result == false" class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="title">
        Error</h4>
    <p>
        {{routing.response.value}}</p>
</div>
<div class="entity-editor" ng-controller="PuntoController as punto">
    <form ng-init="punto.detailInit(tab)" data-toggle="validator" >
        <div class="form-group">
            <label class="control-label">
                Código</label>
            <div class="">
                <p class="form-control-static">
                    {{punto.item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">
                Descripción</label>
            <div class="">
                <p class="form-control-static">
                    {{punto.item.Descripcion}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="punto.item.Mensaje1">
            <label class="control-label">
                Mensaje 1 para el televisor</label>
            <div class="">
                <p class="form-control-static">{{punto.item.Mensaje1}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="punto.item.Mensaje2">
            <label class="control-label">
                Mensaje 2 para el televisor</label>
            <div class="">
                <p class="form-control-static">{{punto.item.Mensaje2}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="punto.item.Mensaje3">
            <label class="control-label">
                Mensaje para el ticket</label>
            <div class="">
                <p class="form-control-static">{{punto.item.Mensaje3}}</p>
            </div>
        </div>
        <div class="form-group" ng-if="punto.item.OrdenAtencion">
            <label class="control-label">
                Orden de Atención</label>
            <div class="">
                <p class="form-control-static">Atender 1 ticket preferencial después de <strong>{{punto.item.OrdenAtencion}}</strong> tickets normales</p>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="punto.index(tab)" class="btn btn-sm btn-link" data-ajax>Cancelar</a>
            <a ng-click="punto.ticketeras(tab, punto.item.Id)" class="btn btn-sm btn-default">
                <span class="glyphicon glyphicon-th"></span>
                Ticketeras
            </a>
            <a ng-click="punto.agentes(tab, punto.item.Id)" class="btn btn-sm btn-default">
                <span class="glyphicon glyphicon-user"></span>
                Mesas
            </a>
            <a ng-click="punto.edit(tab, punto.item.Id)" class="btn btn-sm btn-primary">
                Modificar
            </a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
