<!DOCTYPE html>
<html style="width:100%;height:100%" ng-app="TelevisorApp">
<head>
    <head>
        <title>Televisor</title>
        <link href="~/Resources/bootstrap-3.3.5-dist/css/bootstrap.css" rel="stylesheet"
        type="text/css" />

        <link href="~/Resources/css/tabs.css" rel="stylesheet" type="text/css"/>
        <link href="~/Resources/css/simple-sidebar.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/js/ng-bootstrap.treeview/dist/abn_tree.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/treeview.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/special-glyphicons.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/ticketera.css" rel="stylesheet" type="text/css" />

        <script src="~/Resources/js/jquery-2.1.4.js" type="text/javascript"></script>
        <script src="~/Resources/bootstrap-3.3.5-dist/js/bootstrap.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-animate.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-ui/ui-bootstrap-tpls.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.signalR-1.2.2.js"></script>
        <script src="~/signalr/hubs" type="text/javascript"></script>
    </head>
</head>
<body ng-controller="TelevisorController as televisor">
        <style>
        .overlay{
            opacity:1;
            position:fixed;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index:-1;
        }
        .called
        {
            background-color:Yellow;
        }
        body
        {
            overflow:hidden;
        }
        
        .panel-horizontal .panel-heading {
               float: left;
               width: 10%;
               padding: 0;
               border-bottom: 0;
               border-right: 1px solid transparent;
               border-top-right-radius: 0;
               margin-bottom: 0;
        }

        .panel-horizontal 
        {
            height:120px;
        }
        
        .panel-horizontal .panel-body {
               float: right;
               padding-bottom: 0;
               width: 90%;
               height:120px;
               padding: 0;
        }
        </style>
        	<div class="overlay" style="position:absolute;width:100%;height:100%" >
				<img src="~/Resources/img/default.jpg" style="height:inherit;width:inherit" ng-if="!televisor.video">
                <video ng-src="{{televisor.video}}"  style="height:inherit;width:inherit" autoplay=true muted="true" loop="true">
                {{televisor.video}}
                </video>
				
			</div>
		
    <div style="height:100%">
            <div class="col-md-2 pull-left" style="height:100%">
					<img style="width:80%;margin-top:20px" src="~/Resources/img/logo_cotas.png">
            </div>
            <div style="position:absolute;bottom:35px; left:30px; right:30px">
					<div class="panel panel-primary panel-horizontal" >
						<div class="panel-heading" style="height:100%">
                            <h2 class="text-center hidden-xs">
                                <p>Tickets</p> 
                                <p>llamados</p>
                            </h2>
                        </div>
                        <div class="panel-body">
					  		  <table class="table-bordered" style="height:100%">
                              <tr>
                                  <td id="{{item.NroTicket}}" ng-init="televisor.added(item.NroTicket)" ng-repeat="item in televisor.asignados" style="width:300px;height:100px">
                                        <h1 class="text-center">
                                        {{item.NroTicket}}
                                        <span class="glyphicon glyphicon-arrow-right" style="margin-right:10px;margin-left:10px"></span>
                                        {{item.AgenteId}}
                                        </h1>
                                  </td>
                              </tr>
					  	    </table>
                        </div>
						
					</div>
				
			</div>
		    <div class="marquee-div">
            <marquee direction="left">
                <h1 style="margin-top:0">
                    <span ng-if="televisor.punto.Mensaje1">{{televisor.punto.Mensaje1}}</span>
                    <span ng-if="televisor.punto.Mensaje2">- {{televisor.punto.Mensaje2}} </span>
                </h1>
            </marquee>
        </div>
        
    </div>
        <script src="~/Resources/js/angular-modules/televisor.js" type="text/javascript"></script>
</body>
</html>
