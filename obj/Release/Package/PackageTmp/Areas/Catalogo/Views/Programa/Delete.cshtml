@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Programa
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";
}

<div class=" panel panel-danger" ng-controller="ProgramaController as programa">
    <div ng-show="programa.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{programa.response.value}}</p>
    </div>
    <div class="panel-heading panel-head">
        <b>Advertencia</b>
    </div>
    <div class="panel-body">
        <h4>¿Est&aacute; seguro que quiere <b>eliminar</b> el siguiente <b>@Model.GetType().Name.ToLower()</b>?</h4>
            <form class="form-horizontal" ng-init="programa.detailInit(tab)" method="post" ng-submit="programa.remove(tab, programa.item.Id)">
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Código</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.Id}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Nombre</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.Nombre}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Tipo</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.TipoNombre}}</p>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.PadreNombre">
                    <label class="col-sm-2 control-label">
                        Padre</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.PadreNombre}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Orden</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.Orden}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Estado</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.EstadoNombre}}</p>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.Url != '' && programa.item.Url">
                    <label class="col-sm-2 control-label">
                        Url</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            {{programa.item.Url}}</p>
                    </div>
                </div>
                <label class="control-label text-center">
                    Accesos
                </label>
                <div class="form-group" ng-show="programa.item.CheckSel">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        Seleccionar<br>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.CheckIns">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        Insertar<br>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.CheckMod">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        Modificar<br>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.CheckEli">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        Eliminar<br>
                    </div>
                </div>
                <div class="form-group" ng-show="programa.item.CheckImp">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        Imprimir<br>
                    </div>
                </div>
                <div class="text-right">
                    <a class="btn btn-sm btn-default" ng-click="programa.index(tab)">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
