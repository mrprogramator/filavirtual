@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";
}
<h2 class="page-header">
    Editar Programa
</h2>

<div class="entity-editor" ng-controller="ProgramaController as programa">
    <div ng-show="programa.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>{{programa.response.value}}</p>
    </div>
    <form method="POST" ng-init="programa.detailInit(tab)" data-toggle="validator" ng-submit="programa.update(tab, programa.item)">
        <div class="form-group ">
            <label class="control-label">
                Nombre</label>
            <input class="form-control " type="text" ng-model="programa.item.Nombre"
                required />
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <label class="label-control">
                Tipo</label>
            <select class="form-control" ng-model="programa.item.TipoId" required>
                <option ng-selected="{{tipo.Id == programa.item.TipoId }}"
                        ng-repeat="tipo in programa.tipos"
                        value="{{tipo.Id}}">
                  {{tipo.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group">
            <label class="label-control">
                Padre</label>
            <select class="form-control" ng-model="programa.item.PadreId">
                <option ng-selected="{{padre.Id == programa.item.PadreId }}"
                        ng-repeat="padre in programa.padres"
                        value="{{padre.Id}}">
                  {{padre.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group">
            <label class="label-control">
                Estado</label>
            <select class="form-control" ng-model="programa.item.EstadoId" required>
                <option ng-selected="{{estado.Id == programa.item.EstadoId }}"
                        ng-repeat="estado in programa.estados"
                        value="{{estado.Id}}">
                  {{estado.Nombre}}
                </option>
            </select>
        </div>
        <div class="form-group ">
            <label class="control-label">
                Orden</label>
            <input class="form-control" ng-model="programa.item.Orden" type="number" required/>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group ">
            <label class="control-label">
                Url</label>
            <input class="form-control" ng-model="programa.item.Url" />
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="checkbox-list">
                Accesos</label>
            <div id="checkbox-list" class="container">
                <div class="checkbox">
                    <input type="checkbox" name="CheckSel" ng-model="programa.item.CheckSel">Seleccionar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckIns" ng-model="programa.item.CheckIns">Insertar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckMod" ng-model="programa.item.CheckMod">Modificar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckEli" ng-model="programa.item.CheckEli">Eliminar<br>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="CheckImp" ng-model="programa.item.CheckImp">Imprimir<br>
                </div>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="programa.index(tab)" class="btn btn-link" data-ajax>Cancelar</a>
            <button type="submit" class="btn btn-primary">
                Guardar</button>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>