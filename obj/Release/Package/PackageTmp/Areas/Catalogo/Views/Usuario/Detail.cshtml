@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Usuario
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Usuario";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>

<div class="entity-editor" ng-controller="UsuarioController as usuario">
    <div ng-show="usuario.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>
            {{usuario.response.value}}</p>
    </div>
    <form class="form-horizontal" ng-init="usuario.detailInit(tab)" data-toggle="validator" >
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Id</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="usuario.item.Id">
                    {{usuario.item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Nombre</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="usuario.item.Nombre">{{usuario.item.Nombre}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Email</label>
            <div class="col-sm-10">
                <p class="form-control-static" ng-model="usuario.item.Email">
                    {{usuario.item.Email}}</p>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="usuario.index(tab)" class="btn btn-sm btn-link" data-ajax>Cancelar</a>
            <a  ng-click="usuario.groups(tab, usuario.item.Id)" class="btn btn-sm btn-default" data-ajax>
                <span class="glyphicon glyphicon-user glyphicon-xss-left"></span>
                <span class="glyphicon glyphicon-user"></span>
                <span class="glyphicon glyphicon-user glyphicon-xss-right"></span>
                <text class="hidden-xs">Grupos</text>
            </a>
            <a ng-click="usuario.edit(tab,usuario.item.Id)" class="btn btn-sm btn-primary">
                Modificar
                </a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
