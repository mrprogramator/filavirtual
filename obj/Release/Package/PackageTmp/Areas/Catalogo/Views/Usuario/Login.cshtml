@model SistemaDeGestionDeFilas.Areas.Catalogo.Models.Usuario
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Inicio de Sesión";
}

<div class="container" style="margin:80px auto; max-width:400px">
    <h2 class="page-header" >
        @ViewBag.Title
    </h2>
    <div class="well" ng-controller="LoginController as login">
        <div class="alert alert-danger" ng-show="login.response.result == false">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="title">
                Error</h4>
            <p>
                {{login.response.value}}
            </p>
        </div>
        <form method="POST" ng-submit='login.logUser(item)'>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input autofocus="True" class="form-control" layoutcolumns="4" placeholder="Id de Usuario" ng-model="item.Id" required />
            </div>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input class="form-control " layoutcolumns="4" placeholder="Contraseña" ng-model="item.Password" type="password" required />
            </div>
            <div class="help-block with-errors">
            </div>
        </div>
        <div class="form-group">
            <div id="html_element">
            </div>
        </div>
        <div class="actions text-right">
            <button id='btn_login' type="submit" class="btn btn-success">
                <i class="glyphicon glyphicon-log-in"></i>Iniciar Sesión
            </button>
        </div>
        </form>
    </div>

</div>
