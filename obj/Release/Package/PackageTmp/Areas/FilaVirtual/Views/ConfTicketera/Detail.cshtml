@model SistemaDeGestionDeFilas.Areas.FilaVirtual.Models.ConfTicketera
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Configuración";
}
<div ng-controller="ConfTicketeraController as config">
    <h2 class="page-header">
        @ViewBag.Title
    </h2>
    <div ng-show="routing.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>
            {{routing.response.value}}</p>
    </div>
    <div class="entity-editor">
        <form class="form-horizontal" ng-init="config.detailInit(tab)" data-toggle="validator" >
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Código</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Id}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Descripción</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Descripcion}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Tipo</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Tipo.Nombre}}</p>
                </div>
            </div>
            <div class="form-group" ng-if="config.item.Padre.Descripcion">
                <label class="col-sm-2 control-label">
                    Padre</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Padre.Descripcion}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Tipo de Atención</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.TipoAtencion.Nombre}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Ticketera</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Ticketera.Descripcion}}</p>
                </div>
            </div>
            <div class="form-group" ng-if="config.item.Prefijo">
                <label class="col-sm-2 control-label">
                    Prefijo</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.Prefijo}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    # Ticket</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        {{config.item.NroTicket}}</p>
                </div>
            </div>
            <div class="form-group" ng-if="config.item.Imagen">
                <label class="col-sm-2 control-label">
                    Imagen</label>
                <div class="col-sm-10" >
                    <p>
                        <img ng-src="{{config.item.Imagen}}" style="height:60px">
                    </p>
                </div>
            </div>
            <div class="text-right" style="margin-right:20px">
                <a href="#" ng-click="config.volver(tab)" class="btn btn-sm btn-link" data-ajax>
                Cancelar</a>
                <a ng-click="config.editFromDetail(tab)" class="btn btn-sm btn-primary">
                    Modificar</a>
            </div>
        </form>
    </div>
    <script type="text/javascript">
        $('form[data-toggle="validator"]').validator();
    </script>
</div>