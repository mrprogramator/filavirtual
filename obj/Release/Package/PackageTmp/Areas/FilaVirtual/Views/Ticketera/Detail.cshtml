@model SistemaDeGestionDeFilas.Areas.FilaVirtual.Models.Ticketera
@{
    Layout = "~/Views/Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Ticketera";
}
<div ng-controller="TicketeraController as ticketera">
    <h2 class="page-header">
        @ViewBag.Title
    </h2>
    
    <div class="entity-editor">
        <form class="form-horizontal" ng-init="ticketera.detailInit(tab)" data-toggle="validator" >
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Código</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{ticketera.item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Punto</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{ticketera.item.Punto.Descripcion}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Descripción</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{ticketera.item.Descripcion}}</p>
            </div>
        </div>
        <div class="text-right">
            <a ng-click="ticketera.volver(tab)" class="btn btn-sm btn-link">
                Cancelar
            </a> 
            <a ng-click="ticketera.edit(tab, ticketera.item)" class="btn btn-sm btn-primary">
                Modificar 
            </a>
            <a ng-click="ticketera.configs(tab, ticketera.item)" class="btn btn-sm btn-success">
                Configuraciones 
            </a>
            <a ng-click="ticketera.preview(tab, ticketera.item)"
                class="btn btn-sm btn-default">
                Vista Previa 
            </a>
        </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
