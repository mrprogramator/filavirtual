<link href="~/Resources/datetimepicker/css/datetimepicker.css" rel="stylesheet" type="text/css" />

<div ng-controller="AusenciaOperadorController">
    <h2 class="page-header">Tiempo Ausente por Operador</h2>
    <form method="post" ng-submit="makeReport(tab)">
        
        <div class="form-group col-md-3">
            <div class='input-group input-group-sm date'>
                <input id="dTPInicio" type='text' class="form-control input-lg" placeholder="Inicio"/>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class='input-group input-group-sm date'>
                <input id="dTPFin" type='text' class="form-control input-lg" placeholder="Fin"/>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="col-sm-3">
                <h6><strong>Operador</strong></h6>
            </div>
            <div class="col-sm-9">
            <select name="OperadorId" class="input-sm form-control" ng-model="operadorId" required>
                <option ng-repeat="operador in operadores"
                        value="{{operador.Id}}">
                    {{operador.Nombre}}
                </option>
            </select>
            </div>
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-sm btn-primary">Generar Reporte</button>
        </div>
    </form>
    
</div>
<div id="report-taop-div">

    </div>
<script src="~/Resources/datetimepicker/js/moment.js" type="text/javascript"></script>
<script src="~/Resources/datetimepicker/js/datetimepicker.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('.date').datetimepicker({
            format: 'DD/MM/YYYY',
            locale: 'es'
        });
    });
</script>