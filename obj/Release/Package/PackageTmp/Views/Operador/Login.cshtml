<!DOCTYPE html>
<html ng-app="LoginApp">
  <head>
    <meta content="no-cache" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    
    <title>Operadores</title>
    
    <link href="~/Resources/operador/bootstrap-3.3.5-dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Resources/operador/css/operador.css" rel="stylesheet">
    <link href="~/Resources/operador/css/titlebar.css" rel="stylesheet">
    
    <script src="~/Resources/operador/js/jquery.min.js"></script>
      <script>
    try {
        $ = jQuery = module.exports;
        // If you want module.exports to be empty, uncomment:
        // module.exports = {};
        } catch(e) {  }
    </script>
    <script src="~/Resources/operador/bootstrap-3.3.5-dist/js/bootstrap.min.js"></script>
    <script src="~/Resources/operador/js/angular.min.js" type="text/javascript"></script>
  </head>
  <body ng-controller="LoginController as login">
      <div id="title-bar" style="-webkit-app-regin:drag">
          <div id="title"><img src="~/Resources/img/electron-icon.png" style="height:20px;margin-right:5px;margin-bottom:5px"/><b>Operador - Sistema de Gestión de Filas</b></div>
          <div id="title-bar-btns">
               <button id="min-btn"><span class="glyphicon glyphicon-minus"></span></button>
               <button id="close-btn" onclick="window.close()"><span class="glyphicon glyphicon-remove"></span></button>
          </div>
     </div>
    <div class="row">
        <div class="alert alert-info text-center" ng-show="::false" style="margin-top: 60px; padding-left: 15px">
            Cargando...
        </div>
    </div>
    
    
    <div class="op-header" style="max-width:400px;max-height:400px;margin:10px auto" ng-cloak style="-webkit-app-region: drag">
        <h2 class="page-header">
            Inicio de Sesi&oacute;n
        </h2>
        <div class="well">
            <div class="alert alert-danger" ng-show="login.response.result == false">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="title">
                    Error</h4>
                <p>
                    {{login.response.value}}
                </p>
            </div>
            <form method="POST" ng-submit='login.logUser(item)'>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input autofocus="True" class="form-control" layoutcolumns="4" placeholder="Id de Usuario" ng-model="item.Id" required />
                </div>
                <div class="help-block with-errors">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input class="form-control " layoutcolumns="4" placeholder="Contrase&ntilde;a" ng-model="item.Password" type="password" required />
                </div>
                <div class="help-block with-errors">
                </div>
            </div>
            <div class="form-group">
                <div id="html_element">
                </div>
            </div>
            <div class="actions text-right">
                <button id='btn_login' type="submit" class="btn btn-success">
                    <i class="glyphicon glyphicon-log-in"></i>Iniciar Sesi&oacute;n
                </button>
            </div>
            </form>
        </div>
    </div>
    <div class="footer-container">
      <footer>
        COTAS LTDA. <span class="glyphicon glyphicon-copyright-mark"></span> Todos los derechos reservados
      </footer>
    </div>
    <script src="~/Resources/operador/js/ajax-request.js" type="text/javascript"></script>
    <script src="~/Resources/operador/js/ng-login.js" type="text/javascript"></script>
    <script src="~/Resources/operador/js/default.js" type="text/javascript"></script>
  </body>
</html>
