<!DOCTYPE html>
<html style="width:100%;height:100%" ng-app="TelevisorApp">
<head>
    <head>
        <title>Televisor</title>
        <link href="~/Resources/bootstrap-3.3.5-dist/css/bootstrap.css" rel="stylesheet"
        type="text/css" />

        <link href="~/Resources/css/special-glyphicons.css" rel="stylesheet" type="text/css" />
        <link href="~/Resources/css/ticketera.css" rel="stylesheet" type="text/css" />

        <script src="~/Resources/js/jquery-2.1.4.js" type="text/javascript"></script>
        <script src="~/Resources/bootstrap-3.3.5-dist/js/bootstrap.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-animate.js" type="text/javascript"></script>
        <script src="~/Resources/js/angular-ui/ui-bootstrap-tpls.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.signalR-1.2.2.js"></script>
        <script src="~/signalr/hubs" type="text/javascript"></script>
    </head>
</head>
<body ng-controller="TelevisorController">
        <style>
        .overlay{
            opacity:1;
            position:fixed;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index:-1;
        }
        .called
        {
            background-color:Yellow;
        }
        body
        {
            overflow:hidden;
        }
        
        .panel-horizontal .panel-heading {
               float: left;
               width: 10%;
               padding: 0;
               border-bottom: 0;
               border-right: 1px solid transparent;
               border-top-right-radius: 0;
               margin-bottom: 0;
        }

        .panel-horizontal 
        {
            height:120px;
        }
        
        .panel-horizontal .panel-body {
               float: right;
               padding-bottom: 0;
               width: 90%;
               height:120px;
               padding: 0;
        }
        .video-container 
        {
            position:absolute;
            height:100%;
            width:100%;
            overflow: hidden;
        }

        .video-container video 
        {
            min-width: 100%;
            min-height: 100%;
        }
        </style>
        	<div class="embed-responsive embed-responsive-16by9" >
                <video poster="~/Resources/img/default.jpg" ng-src="{{video}}" class="embed-responsive-item" autoplay=true loop="true" muted="true">
                </video>
				
			</div>
		
    <div style="height:100%">
            <div class="pull-left" style="position:absolute; left:10px;height:100%; z-index:10000000">
					<img style="width:80%;margin-top:20px" src="~/Resources/img/logo_cotas.png">
            </div>
            <div style="position:absolute;bottom:35px; left:30px; right:30px">
					<div class="panel panel-primary" ng-if="asignados.length > 0">
						<div class="panel-heading" style="max-height:50px">
                            <h2 class="text-center" style="margin-top:-5px">
                                Tickets llamados
                            </h2>
                        </div>
                        <div class="panel-body" style="padding:0px">
					  		  <table class="table-bordered" style="width:100%">
                              <tr>
                                  <td id="{{item.NroTicket + item.AgenteId}}" ng-repeat="item in asignados" style="font-size:1.8em">
                                        <h1 class="text-center" style="font-size:3.2em">
                                        {{item.NroTicket}}
                                        <span class="glyphicon glyphicon-arrow-right" style="margin-right:10px;margin-left:10px"></span>
                                        {{item.AgenteId}}
                                        </h1>
                                  </td>
                              </tr>
					  	    </table>
                        </div>
						
					</div>
				
			</div>
		    <div class="marquee-div">
            <marquee direction="left">
                <h1 style="margin-top:0">
                    <span ng-if="punto.Mensaje1">{{punto.Mensaje1}}</span>
                    <span ng-if="punto.Mensaje2">- {{punto.Mensaje2}} </span>
                </h1>
            </marquee>
        </div>
        
    </div>
        <script src="~/Resources/js/angular-modules/televisor-horizontal.js" type="text/javascript"></script>
</body>
</html>
